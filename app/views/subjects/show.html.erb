<!-- app/views/subjects/show.html.erb -->
<p id="notice"><%= notice %></p>

<h1><%= @subject.title %></h1>
<p><%= @subject.content %></p>

<h2>Danh sach su kien</h2>
<ul class="list-group">
  <% @subject.events.each do |event| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to event.title, event_path(event) %>
      <span class="badge badge-info"><%= event.timestart.strftime("%d %b %Y") %></span>
    </li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_subject_path(@subject) , class: 'btn btn-warning' %> |
<%= link_to 'Back', subjects_path %>
