<h1>Subjects</h1>

<%= link_to 'New Subject', new_subject_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.id %></td>
        <td><%= subject.title %></td>
        <td><%= subject.content.truncate(100) %></td>
        
        <td><%= link_to 'Show', subject, class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject), class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
